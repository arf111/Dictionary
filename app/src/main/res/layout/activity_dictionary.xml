<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_blank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafee.dictionary1.DictionaryShow">

    <TextView
        android:id="@+id/defineWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>

    <ImageButton
        android:id="@+id/fav_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/like"
        android:background="#78b96e"/>

    <TextView
        android:id="@+id/New"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@id/defineWord"
        android:paddingBottom="30dp"
        />
    <TextView
        android:id="@+id/syn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Synonym: "
        android:layout_below="@id/New"
        android:paddingBottom="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/synshow_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSSSSSSSSSSSS"
        android:textSize="25dp"
        android:layout_below="@id/New"
        android:layout_toRightOf="@+id/syn_txt"
        android:paddingBottom="30dp"/>

    <TextView
        android:id="@+id/ant_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Antonym: "
        android:layout_below="@id/syn_txt"
        android:paddingBottom="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/antshow_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAAAAAAAAAAA"
        android:textSize="25dp"
        android:layout_below="@id/syn_txt"
        android:layout_toRightOf="@+id/ant_txt"
        android:paddingBottom="30dp"/>

    <TextView
        android:id="@+id/sentence_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show your sentence here..."
        android:gravity="fill"
        android:textSize="20dp"
        android:textColor="#600c17"
        android:layout_below="@id/ant_txt"/>

</RelativeLayout>
