<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:paddingBottom="20dp">


    <Button
        android:id="@+id/favourites_btn"
        android:textSize="16dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Favourites"
        android:background="#38842b"/>

    <Button
        android:id="@+id/history_btn"
        android:textSize="16dp"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/favourites_btn"
        android:text="History"
        android:background="#68a15f"/>


    <Button
        android:id="@+id/quiz_btn"
        android:textSize="16dp"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/favourites_btn"
        android:text="Quiz"
        android:background="#68a15f"/>

    <EditText
        android:id="@+id/searchView1"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="Search...">

    </EditText>


    <ListView
        android:id="@+id/listViewWords"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
    </ListView>
</RelativeLayout>
